# =============================================================================
# Semantic Kernel Agentic Framework - Environment Configuration Template
# =============================================================================
# 複製此文件為 .env 並填入實際值
# 注意: .env 文件已在 .gitignore 中,不會被提交到版本控制

# =============================================================================
# PostgreSQL 數據庫配置
# =============================================================================
POSTGRES_DB=semantic_kernel
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432

# PostgreSQL 連接字串 (.NET)
DATABASE_CONNECTION_STRING=Host=localhost;Port=5432;Database=semantic_kernel;Username=postgres;Password=your_secure_postgres_password_here

# =============================================================================
# Redis 緩存配置
# =============================================================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# Redis 連接字串
REDIS_CONNECTION_STRING=localhost:6379,password=your_secure_redis_password_here

# =============================================================================
# Qdrant 向量數據庫配置
# =============================================================================
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# =============================================================================
# Azure OpenAI 配置
# =============================================================================
# Azure OpenAI Endpoint
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Deployment Names (模型部署名稱)
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large
AZURE_OPENAI_COMPLETION_DEPLOYMENT=gpt-4o

# =============================================================================
# Application Settings
# =============================================================================
# 環境模式 (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Development
NODE_ENV=development

# API 端口配置
AGENT_SERVICE_PORT=7001
KNOWLEDGE_SERVICE_PORT=7002
CODE_INTERPRETER_SERVICE_PORT=7003
WORKFLOW_SERVICE_PORT=7004

# Frontend 配置
VITE_API_BASE_URL=https://localhost:7001

# =============================================================================
# JWT Authentication (未來使用)
# =============================================================================
JWT_SECRET_KEY=your_jwt_secret_key_minimum_32_characters_here
JWT_ISSUER=semantic-kernel-framework
JWT_AUDIENCE=semantic-kernel-clients
JWT_EXPIRATION_MINUTES=60

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=Information
SERILOG_MINIMUM_LEVEL=Information

# =============================================================================
# pgAdmin (可選管理工具)
# =============================================================================
PGADMIN_EMAIL=admin@localhost.com
PGADMIN_PASSWORD=your_pgadmin_password_here
PGADMIN_PORT=5050

# =============================================================================
# Security Settings
# =============================================================================
# CORS 允許的來源 (逗號分隔)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# 是否啟用 HTTPS 重定向
ENABLE_HTTPS_REDIRECT=false

# =============================================================================
# Feature Flags (功能開關)
# =============================================================================
ENABLE_SWAGGER=true
ENABLE_DETAILED_ERRORS=true
ENABLE_RATE_LIMITING=false

# =============================================================================
# Performance Settings
# =============================================================================
# 數據庫連接池大小
DB_CONNECTION_POOL_SIZE=20

# Redis 連接池大小
REDIS_CONNECTION_POOL_SIZE=10

# HTTP 客戶端超時 (秒)
HTTP_CLIENT_TIMEOUT=30

# =============================================================================
# Monitoring & Telemetry (未來使用)
# =============================================================================
# Application Insights (Azure)
APPINSIGHTS_INSTRUMENTATIONKEY=

# Health Check 端點
ENABLE_HEALTH_CHECKS=true
